{
  "compileOnSave": false,
  "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "lib": [
          "dom",
          "dom.iterable",
          "es2015",
          "es2016"
      ],
      "target": "es2016",
      "module": "es2015",
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "removeComments": false,
      "preserveConstEnums": true,
      "sourceMap": true,
      "skipLibCheck": true
  },
  "resolve": {
    "extensions": [ ".ts", ".tsx", ".js", ".json"]
  }
}